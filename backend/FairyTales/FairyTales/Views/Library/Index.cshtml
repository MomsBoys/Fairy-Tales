@*@model List<FairyTales.Models.FairyTaleModel>*@

@model List<FairyTales.Entities.Tale>

@{
    ViewBag.Title = "Index";
}

@section scripts{ 
    <link rel="apple-touch-icon" href="~/images/apple-icon-touch.png" />
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="~/css/filter-style.css"> <!-- Resource style -->
    <script src="~/Scripts/filter-main.js"></script> 
    <script type="text/javascript" src="~/Scripts/jquery-1.11.0.min.js"></script>
	<script type="text/javascript" src="~/Scripts/jquery.mixitup.min.js"></script><!-- Resource jQuery -->
}

<div id="Content">
    <div id="filter">
        <main class="cd-main-content">
            <div class="cd-tab-filter-wrapper">
                <div class="cd-tab-filter">
                    <ul class="cd-filters">
                        <li class="placeholder">
                            <a data-type="all" href="#0">Останні додані</a> <!-- selected option on mobile -->
                        </li>
                        <li class="filter"><a class="selected" href="#0" data-type="all">Останні додані</a></li>
                        <li class="filter" data-filter=".color-1"><a href="#0" data-type="color-1">Популярні</a></li>
                        <li class="filter" data-filter=".color-2"><a href="#0" data-type="color-2">Останні прочитані</a></li>
                        <li class="filter" data-filter=".color-3"><a href="#0" data-type="color-3">Улюблені</a></li>
                    </ul> <!-- cd-filters -->
                </div> <!-- cd-tab-filter -->
            </div> <!-- cd-tab-filter-wrapper -->

            <div class="cd-filter">
                <form>
                    <div class="cd-filter-block">
                        <h4>Види казок</h4>

                        <ul class="cd-filter-content cd-filters list">
                            <li>
                                <input class="filter" data-filter=".check1" type="checkbox" id="checkbox1">
                                <label class="checkbox-label" for="checkbox1">Українські народні</label>
                            </li>

                            <li>
                                <input class="filter" data-filter=".check2" type="checkbox" id="checkbox2">
                                <label class="checkbox-label" for="checkbox2">Українські авторські</label>
                            </li>

                            <li>
                                <input class="filter" data-filter=".check3" type="checkbox" id="checkbox3">
                                <label class="checkbox-label" for="checkbox3">Зарубіжні народні</label>
                            </li>
                            <li>
                                <input class="filter" data-filter=".check4" type="checkbox" id="checkbox4">
                                <label class="checkbox-label" for="checkbox4">Зарубіжні авторські</label>
                            </li>
                        </ul> <!-- cd-filter-content -->
                    </div> <!-- cd-filter-block -->

                    <div class="cd-filter-block">
                        <h4>Типи казок</h4>

                        <ul class="cd-filter-content cd-filters list">
                            <li>
                                <input class="filter" data-filter=".check1" type="checkbox" id="checkbox11">
                                <label class="checkbox-label" for="checkbox11">Побутові</label>
                            </li>

                            <li>
                                <input class="filter" data-filter=".check2" type="checkbox" id="checkbox12">
                                <label class="checkbox-label" for="checkbox12">Про тварин</label>
                            </li>

                            <li>
                                <input class="filter" data-filter=".check3" type="checkbox" id="checkbox13">
                                <label class="checkbox-label" for="checkbox13">Чарівні</label>
                            </li>
                            <li>
                                <input class="filter" data-filter=".check4" type="checkbox" id="checkbox14">
                                <label class="checkbox-label" for="checkbox14">Новелістичні</label>
                            </li>
                            <li>
                                <input class="filter" data-filter=".check4" type="checkbox" id="checkbox15">
                                <label class="checkbox-label" for="checkbox15">Анекдотичні</label>
                            </li>
                            <li>
                                <input class="filter" data-filter=".check4" type="checkbox" id="checkbox16">
                                <label class="checkbox-label" for="checkbox16">Небилиці</label>
                            </li>
                        </ul> <!-- cd-filter-content -->
                    </div> <!-- cd-filter-block -->
                </form>

                <a href="#0" class="cd-close">Закрити</a>
            </div> <!-- cd-filter -->

            <a href="#0" class="cd-filter-trigger">Фільтри</a>
        </main> <!-- cd-main-content -->
    </div><!-- #filter -->

    <div class="container">
        <section id="primary">
            <div class="content">
                
                @foreach (var item in Model)
                {
                    @Html.Partial("ShortTaleView", item)
                }
            </div><!-- .content -->
        </section><!-- #primary -->

        <div id="pagination">
            <ul>
                <li class="control-button"><a href="#" class="disabled">Назад</a></li>
                <li><a href="#0" class="current">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><span>...</span></li>
                <li><a href="#">12</a></li>
                <li class="control-button"><a href="#">Вперед</a></li>
            </ul>
        </div><!-- #pagination -->

        <p id="back-top">
            <a href="#top"><span></span></a>
        </p><!-- #back-top -->
    </div><!-- .container -->
</div><!-- #Content -->