@model List<FairyTales.Models.FairyTale>
<section id="primary">
    <div class="content">
        @if (Model.Count == 0)
        {
            @Html.Partial("_FoundError")
        }
        else
        {
            foreach (var item in Model)
            {
                @Html.Partial("_ShortTaleView", item)
            }
        }

    </div><!-- .content -->
</section><!-- #primary -->