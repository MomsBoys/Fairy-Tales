@using FairyTales.Models
@model FairyTales.Entities.AspNetUser

@{
    ViewBag.Title = "Відредагувати користувача";
    Layout = "../Shared/_AdminPanelLayout.cshtml";
}

<div id="rev-content">
    <div id="rev-body">
        <div class="wrap">

            <h1>Відредагувати користувача</h1>

            @if (ViewBag.ResponseResult != null)
            {
                @Html.Partial("_OperationResult", (ResponseType)ViewBag.ResponseResult)
            }

            <form action="/adminpanel/edituser/@Model.Id" method="post" autocomplete="off">

                <div id="post">
                    <div id="post-body">
                        <div id="post-body-content">

                            <div id="namediv" class="stuffbox">
                                <h3 class="area-title">Користувач</h3>
                                <div class="inside">

                                    <table class="form-table addcat">
                                        <tbody>
                                            <tr valign="top">
                                                <td class="first">Ім'я:</td>
                                                <td><input type="text" name="first_name" size="30" id="first_name" placeholder="Для прикладу: Андрій" value="@Model.FirstName"></td>
                                            </tr>
                                            <tr valign="top">
                                                <td class="first">Прізвище:</td>
                                                <td><input type="text" name="last_name" size="30" id="last_name" placeholder="Для прикладу: Стодоля" value="@Model.SecondName"></td>
                                            </tr>
                                            <tr valign="top">
                                                <td class="first">Привілегії адміна:</td>
                                                <td><input type="checkbox" name="isadmin" size="30" id="isadmin" placeholder="Для прикладу: Стодоля" value="@Model.IsAdmin" @(Model.IsAdmin ? "checked=\"checked\"" : "")></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div><!-- #namediv -->
                        </div>

                        <div id="right-sidebar">
                            <div id="side-wrap">

                                <div id="submitdiv">
                                    <h3 class="area-title">Відредагувати користувача</h3>
                                    <div class="inside">
                                        <div id="submitbox">
                                            <div class="pub-actions">
                                                <div id="publicate">
                                                    <input type="submit" name="submit" id="publish" value="Редагувати" />
                                                </div><!-- #publicate -->
                                            </div>
                                        </div>
                                    </div><!-- .inside -->
                                </div><!-- #submitdiv -->

                            </div><!-- #side-wrap -->
                        </div><!-- #right-sidebar -->

                    </div><!-- #post-body -->
                </div><!-- #post -->

            </form>

        </div><!-- .wrap -->
    </div><!-- #rev-body -->
</div><!-- #rev-content -->
