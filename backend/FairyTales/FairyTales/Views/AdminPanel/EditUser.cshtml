@model FairyTales.Entities.AspNetUser

@{
    ViewBag.Title = "Відредагувати користувача";
    Layout = "../Shared/_AdminPanelLayout.cshtml";
}

<div id="rev-content">
    <div id="rev-body">
        <div class="wrap">

            <h1>Відредагувати користувача</h1>

            <form action="/adminpanel/edittag/@Model.Id" method="post" autocomplete="off">

                <div id="post">
                    <div id="post-body">
                        <div id="post-body-content">

                            <div id="namediv" class="stuffbox">
                                <h3 class="area-title">Користувач</h3>
                                <div class="inside">

                                    <table class="form-table addcat">
                                        <tbody>
                                            <tr valign="top">
                                                <td class="first">Логін:</td>
                                                <td><input type="text" name="login_name" size="30" id="name" placeholder="Для прикладу: Сім'я"></td>
                                            </tr>
                                            <tr valign="top">
                                                <td class="first">Пароль:</td>
                                                <td><input type="text" name="user_password" size="30" id="user_password" placeholder="Для прикладу: 12345"></td>
                                            </tr>
                                            <tr valign="top">
                                                <td class="first">Ім'я:</td>
                                                <td><input type="text" name="firstname" size="30" id="firstname" placeholder="Для прикладу: Андрій"></td>
                                            </tr>
                                            <tr valign="top">
                                                <td class="first">Прізвище:</td>
                                                <td><input type="text" name="lastname" size="30" id="lastname" placeholder="Для прикладу: Стодоля"></td>
                                            </tr>
                                        </tbody>
                                    </table>

                                </div>
                            </div><!-- #namediv -->

                        </div>

                        <div id="right-sidebar">
                            <div id="side-wrap">

                                <div id="submitdiv">
                                    <h3 class="area-title">Відредагувати користувача</h3>
                                    <div class="inside">
                                        <div id="submitbox">
                                            <div class="pub-actions">
                                                <div id="publicate">
                                                    <input type="submit" name="submit" id="publish" value="Редагувати" />
                                                </div><!-- #publicate -->
                                            </div>
                                        </div>
                                    </div><!-- .inside -->
                                </div><!-- #submitdiv -->

                            </div><!-- #side-wrap -->
                        </div><!-- #right-sidebar -->

                    </div><!-- #post-body -->
                </div><!-- #post -->

            </form>

        </div><!-- .wrap -->
    </div><!-- #rev-body -->
</div><!-- #rev-content -->
