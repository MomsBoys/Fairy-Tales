@using FairyTales.Models
@model FairyTales.Entities.Author

@{
    ViewBag.Title = "Додати автора";
    Layout = "../Shared/_AdminPanelLayout.cshtml";
}

<div id="rev-content">
    <div id="rev-body">
        <div class="wrap">

            <h1>Додати автора</h1>

            @if (ViewBag.ResponseResult != null)
            {
                @Html.Partial("_OperationResult", (ResponseType)ViewBag.ResponseResult)
            }

            @using (Html.BeginForm("addauthor", "adminpanel", FormMethod.Post))
            {
                <div id="post">
                    <div id="post-body">
                        <div id="post-body-content">

                            <div id="namediv" class="stuffbox">
                                <h3 class="area-title">Дані про автора</h3>
                                <div class="inside">

                                    <table class="form-table addauthor">
                                        <tbody>
                                            <tr valign="top">
                                                <td class="first">Ім'я:</td>
                                                <td>
                                                    @Html.TextBox("FirstName", "", new { placeHolder = "Для прикладу: Іван", id = "first_name" })
                                                </td>
                                            </tr>
                                            <tr valign="top">
                                                <td class="first">Прізвище:</td>
                                                <td>
                                                    @Html.TextBox("LastName", "", new { placeHolder = "Для прикладу: Франко", id = "last_name" })
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>

                                </div>
                            </div><!-- #namediv -->
                        </div>

                        <div id="right-sidebar">
                            <div id="side-wrap">

                                <div id="submitdiv">
                                    <h3 class="area-title">Додати автора</h3>
                                    <div class="inside">
                                        <div id="submitbox">
                                            <div class="pub-actions">
                                                <div id="publicate">
                                                    <input type="submit" name="submit" id="publish" value="Додати" />
                                                </div><!-- #publicate -->
                                            </div>
                                        </div>
                                    </div><!-- .inside -->
                                </div><!-- #submitdiv -->

                            </div><!-- #side-wrap -->
                        </div><!-- #right-sidebar -->

                    </div><!-- #post-body -->
                </div><!-- #post -->
            }
        </div><!-- .wrap -->
    </div><!-- #rev-body -->
</div><!-- #rev-content -->
