@using FairyTales.Models
@model FairyTales.Entities.Tag

@{
    ViewBag.Title = "Відредагувати тег";
    Layout = "../Shared/_AdminPanelLayout.cshtml";
}

<div id="rev-content">
    <div id="rev-body">
        <div class="wrap">

            <h1>Відредагувати тег</h1>

            @if (ViewBag.ResponseResult != null)
            {
                @Html.Partial("_OperationResult", (ResponseType)ViewBag.ResponseResult)
            }

            <form action="/adminpanel/edittag/@Model.Tag_ID" method="post" autocomplete="off">

                <div id="post">
                    <div id="post-body">
                        <div id="post-body-content">

                            <div id="namediv" class="stuffbox">
                                <h3 class="area-title">Тег</h3>
                                <div class="inside">

                                    <table class="form-table addcat">
                                        <tbody>
                                            <tr valign="top">
                                                <td class="first">Назва:</td>
                                                <td>
                                                    <input type="text" name="tag_id" hidden="hidden" value="@Model.Tag_ID" />
                                                    <input type="text" name="tag_name" size="30" id="name" placeholder="Для прикладу: Сім'я" value="@Model.Name">
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>

                                </div>
                            </div><!-- #namediv -->

                        </div>

                        <div id="right-sidebar">
                            <div id="side-wrap">

                                <div id="submitdiv">
                                    <h3 class="area-title">Відредагувати тег</h3>
                                    <div class="inside">
                                        <div id="submitbox">
                                            <div class="pub-actions">
                                                <div id="publicate">
                                                    <input type="submit" name="submit" id="publish" value="Редагувати" />
                                                </div><!-- #publicate -->
                                            </div>
                                        </div>
                                    </div><!-- .inside -->
                                </div><!-- #submitdiv -->

                            </div><!-- #side-wrap -->
                        </div><!-- #right-sidebar -->

                    </div><!-- #post-body -->
                </div><!-- #post -->

            </form>

        </div><!-- .wrap -->
    </div><!-- #rev-body -->
</div><!-- #rev-content -->
