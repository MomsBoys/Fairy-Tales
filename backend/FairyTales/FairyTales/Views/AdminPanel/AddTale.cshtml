@using System.EnterpriseServices
@using System.Web.UI.WebControls
@using Newtonsoft.Json
@model FairyTales.Models.FairyTale

@{
    ViewBag.Title = "Створення казки";
    Layout = "../Shared/_AdminPanelLayout.cshtml";
}

<div id="rev-content">
    <div id="rev-body">
        <div class="wrap">

            <h1>Додати казку</h1>

        @using (Html.BeginForm())
        {  
                <div id="post">
                    <div id="post-body">
                        <div id="post-body-content">
                            <div id="titlediv">
                                <div class="titlewrap">
                                    @Html.TextBox("Name", "", new { placeHolder = "Введіть заголовок тут", required = "required", id = "title" }) 
                                </div>
                                <div class="linkdiv">
                                    <label for="article_link">Посилання</label>
                                    @Html.TextBox("Path", "", new { placeHolder = "Для прикладу: tale_example", required = "required", id="article_link" }) 
                                </div>
                            </div><!-- #titlediv -->
                            <script>$(function () { $('#content').editable({ inlineMode: false,	height: 500	}) });</script>
                            <div id="contentdiv" class="postarea">
                                <div id="content-wrap">
                                    @Html.TextArea("Text", "", new { placeHolder = "Введіть будь ласка інформацію", required = "required", @class = "editor-area", id = "content" })  
                                </div><!-- #content-wrap -->
                            </div><!-- #contentdiv -->
                            <div id="dif_fields" class="image author">
                                <div id="thumbnaildiv">
                                    <label for="thumbnail">Основне зображення</label>
                                    @Html.TextBox("Cover", "", new { placeHolder = "Вкажіть шлях до зображення", required = "required", id= "thumbnail" })  
                                </div><!-- #thumbnaildiv -->
                                <div id="authordiv">
                                    <label for="author_id">Аудіо для читання</label>
                                    @Html.TextBox("Audio", "", new { placeHolder = "Вкажіть шлях до аудіо", required = "required", id= "thumbnail" })  
                                </div><!-- #authordiv -->
                            </div><!-- #dif_fields -->
                            <div id="seodiv"  > 
                                <div class="inside">
                                    <div class="seowrap">
                                        <div class="seo-input">
                                            <label for="article_excerpt">Короткий зміст</label>
                                            @Html.TextArea("ShortDescription", "", new {  required = "required", id = "article_excerpt" }) 
                                        </div>
                                    </div>
                                </div><!-- .inside -->
                            </div><!-- #seodiv -->
                        </div><!-- #post-body-content -->
                        <div id="right-sidebar">
                            <div id="side-wrap">
                                <div id="submitdiv">
                                    <h3 class="area-title">Опублікувати</h3>
                                    <div class="inside">
                                        <div id="submitbox">
                                            <div class="pub-actions">
                                                <div id="publicate">
                                                    <input type="submit" name="submit" id="publish" value="Опублікувати" />
                                                </div><!-- #publicate -->
                                            </div>
                                        </div>
                                    </div><!-- .inside -->
                                </div><!-- #submitdiv -->
                                <div class="panel-div">
                                    <h3 class="area-title">Автор</h3>
                                    <div class="inside">
                                        <div class="cat-id">
                                            <label for="author_id">Номер автора</label>
                                            @Html.TextBox("Author_ID", "", new { required = "required", id = "author_id", placeholder = "Для прикладу: 1" })  
                                        </div>
                                        <div class="desc">
                                            <p>Список авторів по номеру можна побачити перейшовши по адресу: <a href="/adminpanel/authors">Всі автори</a>.</p>
                                        </div>
                                    </div><!-- .inside -->
                                </div><!-- #categorydiv -->
                                <div class="panel-div">
                                    <h3 class="area-title">Категорія</h3>
                                    <div class="inside">
                                        <div class="cat-id">
                                            <label for="cat_id">Номер категорії</label>
                                            @Html.TextBox("Category_ID", "", new {required = "required", id = "cat_id", placeholder = "Для прикладу: 1"})
                                        </div>
                                        <div class="desc">
                                            <p>
                                                Список категорії по номеру можна побачити перейшовши по адресу: <a href="/adminpanel/categories">Всі категорії</a>.
                                            </p>
                                        </div>
                                    </div><!-- .inside -->
                                </div>
                                <div class="panel-div">
                                    <h3 class="area-title">Тип</h3>
                                    <div class="inside">
                                        <div class="cat-id">
                                            <label for="cat_id">Номер типу</label>
                                            @Html.TextBox("Type_ID", "", new { required = "required", id = "cat_id", placeholder = "Для прикладу: 1" })
                                        </div>
                                        <div class="desc">
                                            <p>
                                                Список категорії по номеру можна побачити перейшовши по адресу: <a href="/adminpanel/categories">Всі категорії</a>.
                                            </p>
                                        </div>
                                    </div><!-- .inside -->
                                </div>
                                <div class="panel-div">
                                    <h3 class="area-title">Теги</h3>
                                    <div class="inside">
                                        <div class="cat-id">
                                            <label for="tag_id">Номери тегів</label>
                                            @Html.TextBox("Tag", "", new {  id = "tag_id", placeholder = "Для прикладу: 1, 2, 3.." })  
                                        </div>
                                        <div class="desc">
                                            <p>
                                                Список тегів по номеру можна побачити перейшовши по адресу: <a href="/adminpanel/tags">Всі теги</a>.
                                            </p>
                                        </div>
                                    </div><!-- .inside -->
                                </div>

                            </div><!-- #side-wrap -->
                        </div><!-- #right-sidebar -->
                    </div><!-- #post-body -->
                </div><!-- #post --> 
        }

        </div><!-- .wrap -->
    </div><!-- #rev-body -->
</div><!-- #rev-content -->
