@model FairyTales.Models.FairyTale

@{
    ViewBag.Title = Model.Name;
}

<div id="Content">
    <div class="container">
        <section id="primary">
            <div class="content">
                <article class="post article">
                    <img width="305" src="@Model.Cover" class="post-image" />

                    <div class="post-right">
                        <div class="article-top">
                            @{
                                var likesCount = new HtmlString(string.Format(" ({0})", @Model.LikeCount));
                            }
                            <a href="#" class="article-like@{if (@Model.IsUserLiked){@Html.Raw(" is-selected")}}">Подобається@{if (!@Model.LikeCount.Equals(0)){@Html.Raw(likesCount)}}</a>
                            <a href="#" class="article-favorite@{if (@Model.IsUserFavorited){@Html.Raw(" is-selected")}} ">В улюблені</a>
                        </div>

                        <h2 class="entry-title">@Model.Name</h2>

                        <div class="entry-meta">
                            <span class="date"><i class="icon-calendar"></i>@Model.Date.ToShortDateString()</span>
                            @if (Model.Author != null)
                            {
                                <span class="author"><i class="icon-user"></i><a href="#">@string.Format("{0} {1}", @Model.Author.FirstName, @Model.Author.LastName)</a></span>
                            }
                            else
                            {
                                <span class="author"><i class="icon-user"></i><a href="#">Народна</a></span>
                            }
                        </div>

                        @if (!string.IsNullOrWhiteSpace(Model.Audio))
                        {
                            <div class="player">
                                <audio preload="auto" controls>
                                    <source src="@Model.Audio">
                                </audio>
                                <script src="../../Scripts/jquery-1.10.2.js"></script>
                                <script src="../../Scripts/audioplayer.js"></script>
                                <script>$(function() { $('audio').audioPlayer(); });</script>
                            </div>
                        }

                        <div class="entry-content">@Html.Raw(@Model.Text)</div>

                        @if (Model.Tags.Count != 0)
                        {
                            <ul class="tags">
                            @foreach (var tag in Model.Tags)
                            {
                                <li><a href="#">@tag.Name</a></li>
                            }
                            </ul>
                        }
<style>
.tags {
    margin-top: 12px;
    overflow: hidden;
    margin-bottom: 12px;
    list-style: none;
    margin-left: 10px;
}

.tags li, .tags a {
    float: left;
    height: 24px;
    line-height: 25px;
    position: relative;
    margin-bottom: 10px;
}

.tags a {
    margin-left: 20px;
    padding: 0 14px 0 16px;
    font-size: 20px;
    background: #5da1b1;
    color: #fff;
    text-decoration: none;
    -moz-border-radius-bottomright: 4px;
    -webkit-border-bottom-right-radius: 4px;
    border-bottom-right-radius: 4px;
    -moz-border-radius-topright: 4px;
    -webkit-border-top-right-radius: 4px;
    border-top-right-radius: 4px;
} 

.tags a:before {
	content: "";
	float: left;
	position: absolute;
	top: 0;
	left: -12px;
	width: 0;
	height: 0;
	border-color: transparent #5da1b1 transparent transparent;
	border-style: solid;
	border-width: 12px 12px 12px 0;		
}

.tags a:after {
    content: "";
	position: absolute;
	top: 10px;
	left: 0;
	float: left;
	width: 4px;
	height: 4px;
	-moz-border-radius: 2px;
	-webkit-border-radius: 2px;
    border-radius: 2px;
	background: #fff;
}

.tags a:hover {
    opacity: 0.8;
}
.tags a:hover:before {
    border-color: transparent #5DA1B1 transparent transparent;
}
</style>
                    </div><!-- .post-right -->
                </article><!-- .post -->
            </div><!-- .content -->
        </section><!-- #primary -->

        <p id="back-top">
            <a href="#top"><span></span></a>
        </p><!-- #back-top -->
    </div><!-- .container -->
</div><!-- #Content -->
