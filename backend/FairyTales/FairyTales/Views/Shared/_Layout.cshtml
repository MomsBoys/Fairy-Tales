﻿@using FairyTales.Controllers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Mom's Stories</title>
    <meta name="viewport" content="width=device-width"/>
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="shortcut icon" href="~/images/favicon.png"/>
    <link rel="apple-touch-icon" href="~/images/apple-icon-touch.png"/>
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("scripts", required: false)
</head>
<body>
<div id="Wrapper">

    <div id="Header" role="banner" class="cd-main-header animate-search">
        <div class="container">
            <div id="logo">
                <a href="/" title="Mom's Stories">
                    <img src="~/images/logo.png" alt="Mom's Stories" />
                </a>
            </div><!-- #logo -->

            @Html.Partial("_LoginPartial")

            <nav id="menu">
                <ul class="menu">
                    <li class="current-menu-item"><a href="/">Головна</a></li>
                    <li><a href="/library/lastadded">Бібліотека</a></li>
                    <li><a href="/contact">Контакти</a></li>
                </ul>
                <a href="#search" class="cd-search-trigger cd-text-replace"></a>
            </nav><!-- #menu -->

            <a href="#" class="responsive-menu-toggle"><i class="fa fa-reorder"></i></a>
        </div><!-- .container -->
    </div><!-- #Header -->

    <div id="search" class="cd-main-search">
        <form>
            <input type="search" placeholder="Пошук...">

            <div class="cd-select">
                <select name="select-category">
                    <option value="category1">по назві</option>
                    <option value="category2">по автору</option>
                    <option value="category3">по тагам</option>
                </select>
                <span class="selected-value">загалом</span>
            </div>
        </form>
        <div class="cd-search-suggestions">
            <div class="news">
                <h3>Пропозиції</h3>
                <ul>
                    <li>
                        <a class="image-wrapper" href="#0"><img src="images/placeholder.png" alt="News image"></a>
                        <h4><a class="cd-nowrap" href="#0">Назва Казки</a></h4>
                        <span class="author">Автор</span>
                    </li>

                    <li>
                        <a class="image-wrapper" href="#0"><img src="images/placeholder.png" alt="News image"></a>
                        <h4><a class="cd-nowrap" href="#0">Назва Казки</a></h4>
                        <span class="author">Автор</span>
                    </li>

                    <li>
                        <a class="image-wrapper" href="#0"><img src="images/placeholder.png" alt="News image"></a>
                        <h4><a class="cd-nowrap" href="#0">Назва Казки</a></h4>
                        <span class="author">Автор</span>
                    </li>
                </ul>
            </div> <!-- .news -->

        </div> <!-- .cd-search-suggestions -->
        <a href="#0" class="close cd-text-replace">Close Form</a>
    </div> <!-- .cd-main-search -->

        <!-- Login Area -->
        <div class="cd-user-modal">
            <div class="cd-user-modal-container">
                <ul class="cd-switcher">
                    <li><a href="#0" class="is-selected">Увійти</a></li>
                    <li><a href="#1">Зареєструватися</a></li>
                </ul>

                <div id="cd-login">
                    @Html.Partial("_SignInPartial", new FairyTales.Models.LoginViewModel())
                </div>

                <div id="cd-signup">
                    @Html.Partial("_SignUpPartial", new FairyTales.Models.RegisterViewModel())
                </div>

                <a href="#0" class="cd-close-form">Close</a>
            </div>
        </div>
        <!-- /Login Area -->
        
        @RenderBody()    
</div>

</body>
</html>
