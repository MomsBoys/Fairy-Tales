@model FairyTales.Models.ForgotPassViewModel


<form action="/Account/ForgotPassEmail" method="post" novalidate="novalidate" class="cd-form" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#cd-login">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div id="results-auth">
        <p style="color: darkred; font-size: 120%"> @ViewBag.ErrorSignInForgotPass</p>
    </div>
    <p class="fieldset">
        <label class="image-replace cd-email" for="signin-email">E-mail</label>
        <input class="full-width has-padding has-border" id="signin-email" type="email" placeholder="Електронна пошта" name="Email" value=@Model.Email>
        <span class="cd-error-message">Введено невірну електронну пошту!</span>
    </p>

    <p class="fieldset no-right-margin">
        <input class="full-width" type="submit" value="Відновити">
    </p>
    <p class="fieldset no-right-margin" style="padding-left: 5px;">
        @Ajax.ActionLink("Назад", "LoginBack", "Account", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "cd-login" })
    </p>

</form>

